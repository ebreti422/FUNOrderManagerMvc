@model List<OrderManagerMvc.Models.Product>
@{
    ViewData["Title"] = "Our Refreshing Products";
}

<div class="text-center py-5 bg-light mb-5 rounded-lg shadow-sm" style="background-color: #e9f8ff !important;">
    <h1 class="display-4 font-weight-bold text-primary">Discover Our Pure Water Solutions</h1>
    <p class="lead text-muted">From crisp bottled water to essential water systems, find what you need.</p>
</div>

<!-- Filter & Search Options 🔎 -->
<form method="get" asp-action="Products" class="mb-5 p-3 border rounded shadow-sm bg-white">
    <div class="form-row align-items-end">
        <div class="col-md-3 mb-3 mb-md-0">
            <label for="typeFilter" class="sr-only">Product Type</label>
            <select id="typeFilter" name="typeFilter" class="form-control custom-select">
                <option value="">All Types</option>
                <option value="Bottles">Bottles 🚰</option>
                <option value="Jugs">Jugs 🧴</option>
                <option value="Truckload">Truckload 🚚</option>
                <option value="Coolers">Coolers 🧊</option>
                <option value="Softeners">Softeners ✨</option>
            </select>
        </div>

        <div class="col-md-3 mb-3 mb-md-0">
            <label for="purchaseType" class="sr-only">Option</label>
            <select id="purchaseType" name="purchaseType" class="form-control custom-select">
                <option value="">All Options</option>
                <option value="Buy">Buy</option>
                <option value="Rent">Rent</option>
            </select>
        </div>

        <div class="col-md-3 mb-3 mb-md-0">
            <label for="maxPrice" class="sr-only">Max Price</label>
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">$</span>
                </div>
                <input id="maxPrice" type="number" name="maxPrice" class="form-control" placeholder="Max Price" />
            </div>
        </div>

        <div class="col-md-3">
            <button type="submit" class="btn btn-primary btn-block">
                <i class="fas fa-filter"></i> Apply Filters
            </button>
        </div>
    </div>
</form>

<!-- Our Offerings 🛍️ -->
<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-sm-6 col-lg-4 mb-5">
            <div class="card h-100 border-0 shadow-lg product-card-hover">
                <div class="product-image-container">
                    <img src="@product.ImageUrl" class="card-img-top product-image" alt="@product.Name" />
                </div>

                <div class="card-body d-flex flex-column">
                    <h5 class="card-title text-primary font-weight-bold mb-1">@product.Name</h5>

                    <div class="mb-3">
                        <span class="badge badge-pill badge-info mr-2">@product.Type</span>
                        @if (product.PurchaseType == "Rent")
                        {
                            <span class="badge badge-pill badge-warning">For Rent</span>
                        }
                        else
                        {
                            <span class="badge badge-pill badge-success">Available to Buy</span>
                        }
                    </div>

                    <p class="card-text text-muted flex-grow-1">@product.Description</p>

                    <div class="mt-3 text-center">
                        <h4 class="text-danger mb-3">
                            <span class="font-weight-light small text-muted">Starting at</span>
                            $@string.Format("{0:N2}", product.Price)
                        </h4>
                        <a asp-controller="Home" asp-action="ProductDetails" asp-route-id="@product.Id" class="btn btn-outline-primary btn-block">
                            View Details
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .product-image-container {
        height: 200px;
        overflow: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #f8f9fa;
    }

    .product-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    .product-card-hover:hover .product-image {
        transform: scale(1.05);
    }

    .product-card-hover {
        transition: all 0.3s ease;
    }

        .product-card-hover:hover {
            border-color: #007bff !important;
            box-shadow: 0 .5rem 1rem rgba(0,0,0,.15) !important;
        }
</style>
