@model List<OrderManagerMvc.Models.CartItem>
@{
    ViewData["Title"] = "Your Shopping Cart";
    // Calculate total price for the view
    decimal subtotal = Model.Sum(item => item.TotalPrice);
    decimal estimatedTax = subtotal * 0.07m; // Example tax rate
    decimal grandTotal = subtotal + estimatedTax;
}

<div class="container py-5">
    <h1 class="display-4 font-weight-bold mb-4">Your Shopping Cart 🛒</h1>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center" role="alert">
            Your cart is currently empty. <a asp-controller="Home" asp-action="Products">Continue Shopping</a>
        </div>
    }
    else
    {
        <div class="row">

            <div class="col-lg-8">
                @foreach (var item in Model)
                {
                    <div class="card mb-3 shadow-sm">
                        <div class="row no-gutters align-items-center">

                            <div class="col-md-3">
                                <img src="@Url.Content(item.ImageUrl)" class="img-fluid" alt="@item.Name"
                                     style="max-height: 120px; object-fit: contain; padding: 10px;" />
                            </div>

                            <div class="col-md-9">
                                <div class="card-body py-2">
                                    <h5 class="card-title text-primary mb-1">@item.Name</h5>
                                    <p class="card-text mb-1">Price: $@string.Format("{0:N2}", item.Price)</p>

                                    <div class="d-flex align-items-center">
                                        <p class="mb-0 mr-3">Quantity: @item.Quantity</p>
                                    </div>

                                    <h5 class="mt-2 text-danger">Total: $@string.Format("{0:N2}", item.TotalPrice)</h5>

                                    <form asp-action="RemoveFromCart" asp-controller="Cart" method="post" class="mt-2">
                                        <input type="hidden" name="productId" value="@item.ProductId" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                            <i class="fas fa-trash-alt"></i> Remove
                                        </button>
                                    </form>

                                </div>
                            </div>
                        </div>
                    </div>
                }

                <a asp-controller="Home" asp-action="Products" class="btn btn-outline-secondary mt-3">
                    <i class="fas fa-arrow-left mr-2"></i> Continue Shopping
                </a>
            </div>

            <div class="col-lg-4">
                <div class="card shadow-lg bg-light">
                    <div class="card-body">
                        <h4 class="card-title text-center mb-4">Order Summary</h4>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item d-flex justify-content-between align-items-center bg-light">
                                Subtotal
                                <span>$@string.Format("{0:N2}", subtotal)</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center bg-light">
                                Estimated Tax (7%)
                                <span>$@string.Format("{0:N2}", estimatedTax)</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center font-weight-bold text-dark bg-light">
                                Grand Total
                                <span>$@string.Format("{0:N2}", grandTotal)</span>
                            </li>
                        </ul>
                        <form asp-controller="Order" asp-action="Checkout" method="post">
                            <button type="submit" class="btn btn-primary btn-lg btn-block mt-4">
                                Proceed to Checkout
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
</div>