@model OrderManagerMvc.Models.Order

@{
    ViewData["Title"] = "Order Details";
}

<div class="container py-5">
    <h1 class="mb-4 text-primary">Order #@Model.Id</h1>

    <div class="mb-4">
        <h4>Customer Info</h4>
        <p><strong>Name:</strong> @Model.Customer?.Name</p>
        <p><strong>Email:</strong> @Model.Customer?.Email</p>
        <p><strong>Phone:</strong> @Model.Customer?.PhoneNumber</p>
        <p><strong>Address:</strong> @Model.Customer?.Address</p>
    </div>

    <div class="mb-4">
        <h4>Order Summary</h4>
        <p><strong>Date:</strong> @Model.OrderDate.ToLocalTime().ToString("f")</p>
        <p><strong>Status:</strong> @Model.Status</p>
        <p><strong>Total Amount:</strong> $@Model.TotalAmount.ToString("N2")</p>
    </div>

    <div class="mb-4">
        <h4>Items</h4>
        <table class="table table-bordered table-striped">
            <thead class="table-light">
                <tr>
                    <th>Product</th>
                    <th>Quantity</th>
                    <th>Unit Price</th>
                    <th>Line Total</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@item.Product?.Name</td>
                        <td>@item.Quantity</td>
                        <td>$@item.UnitPrice.ToString("N2")</td>
                        <td>$@item.LineTotal.ToString("N2")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <a asp-action="Index" class="btn btn-outline-secondary">Back to Orders</a>
</div>